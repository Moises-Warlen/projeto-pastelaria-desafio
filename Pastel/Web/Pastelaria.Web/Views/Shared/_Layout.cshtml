<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> @*responsaves de estilisar as tabelas*@
    <!-- FontAwesome CSS -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Content/stylesMenu.css"> <!-- Certifique-se de que o caminho esteja correto -->
    <link rel="stylesheet" href="~/Content/Responsivo.css"> <!-- Certifique-se de que o caminho esteja correto -->
    
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- Menu lateral (sidebar) -->
    <nav id="sidebar">
        <div id="sidebar_content">
            <div id="user">
                <img src="~/Imagens/do-utilizador.png" id="user_avatar" alt="Usuario">
                <p id="user_infos">
                    <span class="item-description" style="font-size: 1.2em; font-weight: bold;">
                        @ViewBag.Username
                    </span>
                </p>
            </div>
            <ul id="side_items">
                <li class="side-item active">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home"></i>
                        <span class="item-description">Home</span>
                    </a>
                </li>
                @if (ViewBag.IdPerfil == 1)
                {
                    <li class="side-item">
                        <a href="@Url.Action("Index", "Usuario")">
                            <i class="fa-solid fa-user"></i>
                            <span class="item-description">Usuários</span>
                        </a>
                    </li>
                }
                <li class="side-item">
                    <a href="@Url.Action("Index", "Tarefa")">
                        <i class="fas fa-tasks"></i>
                        <span class="item-description">Tarefas</span>
                    </a>
                </li>
                <li class="side-item">
                    <a href="@Url.Action("Index", "Sobre")">
                        <i class="fas fa-info-circle"></i>
                        <span class="item-description">Sobre</span>
                    </a>
                </li>
                <div id="logout">
                    <a id="logout_btn" href="@Url.Action("Index", "Login")">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span class="item-description">Logout</span>
                    </a>
                </div>
            </ul>
            <button id="open_btn">
                <i id="open_btn_icon" class="fa-solid fa-chevron-right"></i>
            </button>
        </div>
    </nav>

    <main>
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <script src="~/Scripts/scriptMenu.js"></script> <!-- Certifique-se de que o caminho esteja correto -->
</body>
</html>
